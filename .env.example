# ============================================
# DOCUMENT EMBEDDING SERVICE - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your actual values

# ============================================
# SERVER CONFIGURATION
# ============================================
SERVER_PORT=8000
APP_NAME="Document Embedding Service"
DEBUG=false

# ============================================
# OPENAI CONFIGURATION (REQUIRED)
# ============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Embedding model configuration
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# ============================================
# QDRANT VECTOR DATABASE CONFIGURATION
# ============================================
# Choose ONE of the following setups:

# Option 1: Qdrant Cloud (Recommended for production)
QDRANT_USE_CLOUD=true
QDRANT_URL=https://your-cluster-id.region.gcp.cloud.qdrant.io:6333
QDRANT_API_KEY=your_qdrant_cloud_api_key

# Option 2: Local Qdrant (For development)
# QDRANT_USE_CLOUD=false
# QDRANT_HOST=qdrant
# QDRANT_PORT=6333
# QDRANT_API_KEY=

# Collection name
COLLECTION_NAME=cs_chatbot_docs

# ============================================
# DOCUMENT PROCESSING CONFIGURATION
# ============================================
# Text chunking settings
CHUNK_SIZE=800
CHUNK_OVERLAP=150

# File upload limits
MAX_FILE_SIZE_MB=100

# Supported file types (comma-separated, or use default)
# SUPPORTED_FILE_TYPES=application/pdf,text/plain,text/markdown,image/png,image/jpeg,image/jpg

# ============================================
# CORS CONFIGURATION
# ============================================
# Allowed origins for CORS (comma-separated or *)
ALLOWED_ORIGINS=*

# For production, specify exact origins:
# ALLOWED_ORIGINS=https://your-frontend.com,https://your-admin-panel.com

# ============================================
# STORAGE CONFIGURATION  
# ============================================
TEMP_UPLOAD_DIR=/tmp/uploads

# ============================================
# PROCESSING CONFIGURATION
# ============================================
# Batch processing settings
MAX_BATCH_SIZE=10

# Retry settings
MAX_RETRIES=3
RETRY_DELAY=1

# ============================================
# QDRANT LOCAL (Only if using local Qdrant)
# ============================================
# Web UI port for local Qdrant
QDRANT_WEB_PORT=6334

# ============================================
# EXAMPLE CONFIGURATIONS
# ============================================

# Development with Qdrant Cloud:
# QDRANT_USE_CLOUD=true
# QDRANT_URL=https://abc123-def4-5678-9ghi-jklmnopqrst.us-east4-0.gcp.cloud.qdrant.io:6333  
# QDRANT_API_KEY=your-qdrant-cloud-key
# OPENAI_API_KEY=sk-your-openai-key
# DEBUG=true

# Production with Qdrant Cloud:
# QDRANT_USE_CLOUD=true
# QDRANT_URL=https://your-prod-cluster.region.gcp.cloud.qdrant.io:6333
# QDRANT_API_KEY=your-prod-qdrant-key  
# OPENAI_API_KEY=sk-your-prod-openai-key
# ALLOWED_ORIGINS=https://your-app.com
# DEBUG=false

# Development with Local Qdrant:
# QDRANT_USE_CLOUD=false
# QDRANT_HOST=qdrant
# QDRANT_PORT=6333
# OPENAI_API_KEY=sk-your-openai-key
# DEBUG=true